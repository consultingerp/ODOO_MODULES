<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="js_default_contact_form" inherit_id="website_crm.contactus_form" name="JS Formulario de contacto por defecto" priority="25">
        <!-- Que el campo Empresa no sea obligatorio -->
        <xpath expr="//form[@action='/website_form/']/div[4]" position="replace">
            <div class="form-group form-field">
                <label class="col-md-3 col-sm-4 control-label" for="partner_name">Your company</label>
                <div class="col-md-7 col-sm-8">
                    <input type="text" class="form-control o_website_form_input" name="partner_name" t-att-value="request.params.get('partner_name', '')"/>
                </div>
            </div>
        </xpath>

        <!-- AÃ±adir campo de recaptcha -->
        <xpath expr="//form[@action='/website_form/']/div[6]" position="after">
            <div class="form-group form-field o_website_form_required_custom">
                <label class="col-md-3 col-sm-4 control-label" for="g-recaptcha-response">Recaptcha</label>
                <div class="col-md-7 col-sm-8">
                    <span class="o_website_form_recaptcha" />
                </div>
            </div>
        </xpath>
    </template>
</odoo>
