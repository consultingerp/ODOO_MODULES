<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Backend CSS -->
    <template id="js_website_images_assets_backend" inherit_id="web.assets_backend" name="JS Website Images CSS Backend">
        <xpath expr="." position="inside">
            <link href="/js_website_images/static/less/backend.less" rel="stylesheet" type="text/less" />
        </xpath>
    </template>

    <!-- Frontend JS -->
    <template id="js_website_images_assets_frontend" inherit_id="website.assets_frontend" name="JS Website Images Scripts Frontend">
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/js_website_images/static/js/functions.js" />
        </xpath>
    </template>

    <!-- Backend Product View -->
    <record id="js_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.images.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_image_ids']" position="replace">
                <field name="product_image_ids" mode="kanban" context="{'default_name': name, 'default_product_tmpl_id': active_id}">
                    <kanban string="Product Images">
                        <field name="image" />
                        <templates>
                            <t t-name="kanban-box">
                                <div class="oe_kanban_global_click">
                                    <a t-if="!read_only_mode" type="delete" class="fa fa-times pull-right"/>
                                    <div class="o_kanban_image">
                                        <img t-if="record.image.raw_value" t-att-src="'data:image/png;base64,'+record.image.raw_value"/>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <field name="name" />
                                        <div class="product_image_tags">
                                            <field name="product_attributes_values" widget="many2many_tags" />
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                </field>
            </xpath>
        </field>
    </record>

    <!-- Backend Image Add/Edit -->
    <record id="js_product_image_form_view" model="ir.ui.view">
        <field name="name">product.image.form.inherit</field>
        <field name="model">product.image</field>
        <field name="inherit_id" ref="website_sale.view_product_image_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="replace">
                <sheet>
                    <field name="product_tmpl_id" invisible="1"/>
                    <field name="image" widget="image" class="oe_avatar" required="True" options="{'size': [160, 120]}"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Image Description (alt text)"/>
                        <h1><field name="name" placeholder="alt image text" required="True"/></h1>
                    </div>
                    <div class="oe_other">
                        <label class="oe_edit_only" for="product_attributes" string="Attributes Applied" />
                        <div><field name="product_attributes_values" widget="many2many_tags" options="{'no_create':True, 'no_create_edit':True}" /></div>
                    </div>
                </sheet>
            </xpath>
        </field>
    </record>

    <!-- Frontend Product View -->
    <template id="js_product" inherit_id="website_sale.product" name="JS Website Product">
        <xpath expr="//ol[hasclass('carousel-indicators')]" position="replace">
            <ol class="carousel-indicators" t-if="len(image_ids) or variant_img">
                <li t-if="variant_img" data-target="#o-carousel-product" data-slide-to="0" class="active">
                    <img class="img img-responsive js_variant_img_small" t-attf-src="/website/image/product.product/{{product.product_variant_id.id}}/image/90x90" t-att-alt="product.name"/>
                </li>
                <li data-target="#o-carousel-product" t-att-data-slide-to="1 if variant_img else '0'" t-att-class="'' if variant_img else 'active'">
                    <img class="img img-responsive" t-attf-src="/website/image/product.template/{{product.id}}/image/90x90" t-att-alt="product.name"/>
                </li>
                <t t-if="len(image_ids)" t-foreach="image_ids" t-as="pimg">
                    <li data-target="#o-carousel-product" t-att-data-slide-to="pimg_index + (variant_img and 2 or 1)" t-att-data-variants="pimg.product_attributes_values._ids">
                        <img class="img img-responsive" t-attf-src="/website/image/product.image/{{pimg.id}}/image/90x90" t-att-alt="pimg.name"/>
                    </li>
                </t>
            </ol>
        </xpath>
    </template>
</odoo>
