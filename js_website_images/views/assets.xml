<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- RECURSOS -->

    <template id="assets" inherit_id="web.assets_backend" name="JS Website Images Assets Backend">
        <xpath expr="." position="inside">
            <link href="/js_website_images/static/less/backend.less" rel="stylesheet" type="text/less" />
        </xpath>
        
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/js_website_images/static/js/basic_fields.js"></script>
        </xpath>
    </template>

    <!-- Frontend JS -->
    <template id="js_website_images_assets_frontend" inherit_id="website.assets_frontend" name="JS Website Images Assets Frontend">
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/js_website_images/static/js/functions.js" />
        </xpath>
    </template>

</odoo>
