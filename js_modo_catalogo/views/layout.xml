<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Estilos propios del módulo (en static/less/)  -->
    <template id="modo_catalogo_includes" inherit_id="website.assets_frontend" name="JS Modo Catálogo Includes">
        <xpath expr="." position="inside">    
            <link href="/js_modo_catalogo/static/less/modo_catalogo_styles.less" rel="stylesheet" type="text/less"/>
        </xpath>
    </template>

    <!-- Eliminar Precios en página de tienda -->
    <template id="js_precio_de_producto_modo_catalogo" inherit_id="website_sale.products_item" name="JS precio de producto, modo catálogo" priority="25">
        <xpath expr="//div[hasclass('product_price')]" position="replace"></xpath>
    </template>

    <!-- Eliminar Precios en página de producto -->
    <template id="js_precio_de_producto_en_producto_modo_catalogo" inherit_id="website_sale.product_price" name="JS precio de producto en producto, modo catálogo" priority="25">
        <xpath expr="//div[hasclass('product_price')]" position="replace"></xpath>
    </template>

    <!-- Tema Clarico. Eliminar precio de productos sugeridos en página de producto -->
    <template id="js_precio_producto_sugerido_modo_catalogo" inherit_id="clarico_product.clarico_product_suggested_products" name="JS producto sugerido, modo catálogo" priority="25">
        <xpath expr="//div[hasclass('alt_prod_product_price')]" position="replace"></xpath>
    </template>

    <!-- Tema Clarico. Eliminar precio de productos sugeridos en página de producto -->
    <template id="js_precio_producto_accesorio_modo_catalogo" inherit_id="clarico_product.clarico_product_suggested_Accessories" name="JS producto accesorio, modo catálogo" priority="25">
        <xpath expr="//div[hasclass('alt_prod_product_price')]" position="replace"></xpath>
    </template>

    <!-- Tema Clarico. Eliminar precio de productos en el carrusel Multi -->
    <template id="js_precio_producto_carrusel_multi_modo_catalogo" inherit_id="clarico_product_multi_carousel.clarico_product_multi_carousel_static_carousel_snippet_product" name="JS producto carrusel Multi, modo catálogo" priority="25">
        <xpath expr="//div[hasclass('product_price')]" position="replace"></xpath>
    </template>

    <!-- Tema Clarico. Eliminar precio de productos en el carrusel -->
    <template id="js_precio_producto_carrusel_modo_catalogo" inherit_id="clarico_product_carousel.product_carousel_snippet_product" name="JS producto carrusel, modo catálogo" priority="25">
        <xpath expr="//div[hasclass('product_price')]" position="replace"></xpath>
    </template>

    
    <!-- Eliminar Botón "Añadir al carrito" y eliminar DIV +- de Cambiar cantidades en producto -->
    <template id="js_carrito_modo_catalogo" inherit_id="clarico_product.clarico_product_product" name="JS carrito modo catálogo" priority="25">
        <xpath expr="//div[hasclass('cart-quantity-div')]" position="replace"></xpath>
        <xpath expr="//div[hasclass('p_ad2cart')]" position="replace"></xpath>
    </template>

    <!-- Ocultar por CSS <div> +1- de Cambiar cantidades en producto -->
    <!-- Tema Clarico: eliminar <div> +1- de Cambiar cantidades en producto -->
    <!-- template id="js_cantidades_clarico_modo_catalogo" inherit_id="clarico_quick_view.product_quick_view_quantity" name="JS cantidades clarico modo catálogo" priority="25">
        <xpath expr="//div[hasclass('quick_product_quantity')]" position="replace"></xpath>
    </template -->

    <!-- Tema Clarico: Eliminar Botón "Añadir al carrito" en la imagen de la lista de productos en la página de la tienda, debajo de los iconos del ojo y el corazón  -->
    <template id="js_carrito_clarico_modo_catalogo" inherit_id="clarico_cart.clarico_shop_cart" name="JS Carrito Clarico modo catálogo" priority="30">
        <xpath expr="//div[@id='addtocart_shop']" position="replace"></xpath>        
    </template>

    <!-- Tema Clarico: Eliminar Botón "Añadir al carrito" en la imagen que se despliega al clicar en el icono del ojo en la lista de productos en la página de la tienda -->
    <template id="js_carrito_clarico_imagen_modo_catalogo" inherit_id="clarico_quick_view.clarico_quick_view_fetch-record" name="JS Carrito Clarico imagen modo catálogo" priority="30">
        <xpath expr="//div[hasclass('qv_ad2cart')]" position="replace"></xpath>
    </template>

    <!-- Tema Clarico: anular destino del enlace del corazón de la lista de deseos, que sea clicable pero no haga nada -->
    <template id="js_clarico_ojo_lista_deseos_modo_catalogo" inherit_id="clarico_wishlist.clarico_shop_wishlist" name="JS Clarico ojo lista deseos modo catalogo" priority="30">
        <!-- Usuarios anónimos -->
        <xpath expr="//a[@t-attf-href='/web/login?redirect=#{url}']" position="replace">
            <a t-attf-href="#wishlist_shop">
                <i class="fa fa-heart-o" aria-hidden="true"/>
            </a>
        </xpath>
    </template>

    <!-- Tema Clarico: anular destino del enlace del ojo del quickview, que sea clicable pero no haga nada -->
    <!-- jquery clase quick-view-a  -->
    <template id="js_clarico_ojo_quickview_modo_catalogo" inherit_id="clarico_quick_view.product_quick_view_products_item" name="JS Clarico ojo quickview modo catalogo" priority="30">
        <xpath expr="//a[hasclass('quick-view-a')]" position="replace">
            <a title="Quick View" class="quick-view-a-borrar" t-att-data-id="'%s' % product.id">
                <i class="fa fa-eye" aria-hidden="true"/>
            </a>
        </xpath>
    </template>

    <!-- Tema Clarico: Eliminar Botón "Añadir al carrito" en Clarico Wishlist del usuario -->
    <template id="js_carrito_clarico_wishlist_modo_catalogo" inherit_id="clarico_wishlist.clarico_wishlist" name="JS Carrito Clarico Wishlist modo catálogo" priority="30">
        <xpath expr="//td[hasclass('clarico_wish_cart')]" position="replace"></xpath>
    </template>

    <!-- Tema Clarico: Eliminar Botón "Añadir al carrito" en Clarico Product Compare -->
    <template id="js_carrito_clarico_product_compare_modo_catalogo" inherit_id="clarico_compare.clarico_compare_product_compare" name="JS Carrito Clarico Comparador de Productos" priority="20">
        <xpath expr="//div[hasclass('compare_function_main_div')]" position="replace"></xpath>
    </template>


</odoo>