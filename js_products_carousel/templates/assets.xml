<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="assets_frontend_js" name="E-commerce product carousel snippets JS frontend assets" inherit_id="website.assets_frontend">
		<xpath expr="//link[last()]" position="after">
			<link href="/js_products_carousel/static/less/mixin.less" rel="stylesheet" type="text/less" />
			<link href="/js_products_carousel/static/less/owl.carousel.min.less" rel="stylesheet" type="text/less" />
			<link href="/js_products_carousel/static/less/product_carousel_slider.less" rel="stylesheet" type="text/less" />
		</xpath>

		<xpath expr="//script[last()]" position="after">
			<script type="text/javascript" src="/js_products_carousel/static/js/owl.carousel.js"></script>
			<script type="text/javascript" src="/js_products_carousel/static/js/ecommerce_product_carousel_snippet_frontend.js"></script>
		 	<script type="text/javascript" src="/js_products_carousel/static/js/slider_custom.js"></script>
		</xpath>
	</template>

	<template id="assets_editor_js" name="E-commerce product carousel snippets JS Editor assets" inherit_id="website.assets_editor">
		<xpath expr="//script[last()]" position="after">
			<script type="text/javascript" src="/js_products_carousel/static/js/rte_widget.js" ></script>
			<script type="text/javascript" src="/js_products_carousel/static/js/ecommerce_product_carousel_snippet_editor.js"></script>
		</xpath>
	</template>
</odoo>
