<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="js_clarico_contactus_form" inherit_id="clarico_contact.clarico_contactus_form" name="JS Clarico Contact Form">
        <!-- Que el campo Empresa no sea obligatorio -->
        <xpath expr="//form[@action='/website_form/']/div[4]" position="replace">
            <div class="form-group form-field">
                <label class="col-md-3 col-sm-4 control-label" for="partner_name">Empresa</label>
                <div class="col-md-7 col-sm-8">
                    <input type="text" class="form-control o_website_form_input" name="partner_name" t-att-value="request.params.get('partner_name', '')"/>
                </div>
            </div>
        </xpath>

        <!-- AÃ±adir campo de recaptcha -->
        <xpath expr="//form[@action='/website_form/']/div[6]" position="after">
            <div class="form-group form-field o_website_form_required_custom">
                <label class="col-md-3 col-sm-4 control-label" for="g-recaptcha-response">Recaptcha</label>
                <div class="col-md-7 col-sm-8">
                    <span class="o_website_form_recaptcha" />
                </div>
            </div>
        </xpath>
    </template>

    <template id="js_contactus" inherit_id="website.contactus" name="JS Contact Us">
        <!-- Cambiar mapa de Google por OpenMaps  -->
		<xpath expr="//div[hasclass('col-md-4','mb32')]" position="replace">
            <div id="organization" class="col-md-4 mb32">
    		    <address itemscope="itemscope" itemtype="http://schema.org/Organization">
                    <div t-field="res_company.partner_id" t-options='{ "widget": "contact", "fields": ["address", "phone", "mobile", "email"] }'/>
    				<iframe class="map" width="100%" height="340" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=-69.92692172527315%2C18.466782207191528%2C-69.9224478006363%2C18.469209256892473&amp;layer=mapnik&amp;marker=18.467995736333986%2C-69.92468476295471"></iframe>
    			</address>
            </div>
		</xpath>
    </template>
</odoo>
