<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Plantilla de Presupuesto -->
        <template id="nueva_plantilla_cotizaciones" inherit_id="sale.report_saleorder_document">

            <!-- Quitar la dirección extra que aparece en superior/derecha del PDF -->
            <xpath expr="//div[@class='page']/div[@class='row']/div[@class='col-xs-5 col-xs-offset-1']" position="replace"></xpath>

            <!-- Quitar la dirección de envío  -->
            <xpath expr="//div[@class='page']/div[@class='row']/div[@class='col-xs-6']//div[hasclass('mt8')]" position="replace"></xpath>

            <!-- Poner la dirección de envío en su sitio -->
             <xpath expr="//div[@class='page']/div[@class='row']/div[@class='col-xs-6']" position="after">
                <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="col-xs-6">
                    <strong>Shipping address:</strong>
                    <div t-field="doc.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                </div>
            </xpath>

        </template>

        <!-- Plantilla de Facturas -->
        <template id="nueva_plantilla_facturas" inherit_id="account.report_invoice_document">

            <!-- Poner información de pago al final de la factura -->
            <xpath expr="//p[@t-if='o.payment_term_id']" position="replace">
                <p t-if="o.type == 'out_invoice' and o.state != 'paid'">
                    Puede pagar por cheque o transferencia a una de nuestras cuentas:<br/>
                    <strong>Banreservas</strong>: Cuenta en Pesos: 1670016142 - Cuenta en Dólares: 9600196043<br/>
                    <strong>BHDLeón</strong>: Cuenta en Pesos: 25556610012 - Cuenta en Dólares: 25556610021
                </p>
            </xpath>

        </template>
    </data>
</odoo>
