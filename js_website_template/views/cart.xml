<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="custom_cart" inherit_id="website_sale.cart" name="Custom Cart">

        <!-- Corregir clases en carrito  -->
        <xpath expr="//div[@id='wrap']" position="replace">
            <div id="wrap">
                <div class="container oe_website_sale">
                    <div class="row">
                        <div class="col-lg-offset-2 col-md-offset-1 col-lg-8 col-md-10 col-sm-12 oe_cart">
                            <div class="wizard_breadcrumb">
                                <t t-call="website_sale.wizard_checkout">
                                    <t t-set="step" t-value="10"/>
                                </t>
                            </div>
                            <div class="cart_detail">
                                <div class="col-md-12 o_website_sale_rightfit">
                                    <h2 class="mb8 mt8">Carrito de la compra</h2>
                                    <div t-if="abandoned_proceed or access_token" class="mt8 mb8 alert alert-info"> <!-- abandoned cart choices -->
                                        <t t-if="abandoned_proceed">
                                            <p>Su carro anterior ya se ha completado.</p>
                                            <p t-if="website_sale_order">Continúe con su carro actual.</p>
                                        </t>
                                        <t t-if="access_token">
                                            <p>Este es su carro actual.</p>
                                            <p>
                                                <strong><a t-attf-href="/shop/cart/?access_token=#{access_token}&amp;revive=squash">Haga clic aquí</a></strong> si desea recuperar su carro anterior. Su carro actual será sustituido por el anterior.</p>
                                            <p>
                                                <strong><a t-attf-href="/shop/cart/?access_token=#{access_token}&amp;revive=merge">Haga clic aquí</a></strong> si desea combinar su carro anterior con el actual.
                                            </p>
                                        </t>
                                    </div>
                                    <!-- fin de mensaje -->
                                    <t t-call="website_sale.cart_lines"/>
                                    <div class="clearfix"/>
                                    <!-- Botón de continuar compra -->
                                    <a class="btn btn-default pull-left mb32" href="/shop">
                                        <span t-if="website_sale_order and len(website_sale_order.website_order_line) > 0">Continuar Compra</span>
                                        <span t-else="">Volver a la Tienda</span>
                                    </a>
                                    <!-- fin de botón -->
                                    <a t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" class="btn btn-primary pull-right mb32" href="/shop/checkout">
                                        <span class="hidden-xs">Proceso de Pago</span>
                                        <span class="visible-xs-inline">Pagar</span>
                                        <span class="fa fa-long-arrow-right"/>
                                    </a>
                                    <div class="oe_structure"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </xpath>

    </template>

    <template id="custom_cart_lines" inherit_id="website_sale.cart_lines" name="Custom Cart Lines">

        <!-- Mostrar botón de eliminar producto en móviles  -->
        <xpath expr="//a[hasclass('js_delete_product', 'hidden-xs')]" position="attributes">
            <attribute name="class">js_delete_product no-decoration</attribute>
        </xpath>

    </template>

    <template id="custom_payment" inherit_id="website_sale.payment" name="Custom Payment" priority="1">

        <!-- Corregir clases para los errores  -->
        <xpath expr="//div[hasclass('col-md-offset-2','col-lg-8','col-sm-9')]" position="replace">
            <div class="col-lg-offset-2 col-md-offset-1 col-lg-8 col-md-10 col-sm-12" t-if="errors">
                <t t-foreach="errors" t-as="error">
                    <div class="alert alert-warning" t-if="error">
                        <h4>
                            <t t-esc="error[0]"/>
                        </h4>
                        <t t-esc="error[1]"/>
                    </div>
                </t>
            </div>
        </xpath>

        <!-- Corregir clases para el contenido  -->
        <xpath expr="//div[hasclass('col-md-8','col-md-offset-2','oe_cart')]" position="replace">
            <div class="col-lg-offset-2 col-md-offset-1 col-lg-8 col-md-10 col-sm-12 oe_cart">
                <div class="wizard_breadcrumb">
                    <t t-call="website_sale.wizard_checkout">
                        <t t-set="step" t-value="40"/>
                    </t>
                </div>
                <div class="cart_detail">
                    <div class="col-md-12 o_website_sale_rightfit">
                        <h2 class="mb8 mt8">Confirmar pedido</h2>
                        <table class="table table-striped table-condensed" id="cart_products" t-if="website_sale_order and website_sale_order.website_order_line">
                            <thead>
                                <tr>
                                    <th class="td-img">Producto</th>
                                    <th/>
                                    <th class="td-qty">Cantidad</th>
                                    <th class="text-center td-price">Precio</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="website_sale_order.website_order_line" t-as="line">
                                    <td class="" colspan="2" t-if="not line.product_id.product_tmpl_id"/>
                                    <td class="td-img" t-if="line.product_id.product_tmpl_id">
                                        <a t-attf-href="/shop/product/#{ slug(line.product_id.product_tmpl_id) }">
                                            <span t-field="line.product_id.image_small" t-options="{'widget': 'image', 'class': 'img-rounded'}"/>
                                        </a>
                                    </td>
                                    <td class="td-product_name" t-if="line.product_id.product_tmpl_id">
                                        <div>
                                            <strong t-field="line.product_id.with_context(display_default_code=False).display_name"/>
                                        </div>
                                        <div class="text-muted hidden-xs small">
                                            <t t-foreach="line.name.splitlines()[1:]" t-as="name_line">
                                                <span><t t-esc="name_line"/></span><br/>
                                            </t>
                                        </div>
                                    </td>
                                    <td class="td-qty">
                                        <div t-esc="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty"/>
                                    </td>
                                    <td class="text-center td-price">
                                        <span t-field="line.price_reduce_taxexcl" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'from_currency': website_sale_order.pricelist_id.currency_id, 'display_currency': website.currency_id}" groups="sale.group_show_price_subtotal"/>
                                        <span t-field="line.price_reduce_taxinc" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'from_currency': website_sale_order.pricelist_id.currency_id, 'display_currency': website.currency_id}" groups="sale.group_show_price_total"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-12">
                        <t t-call="website_sale.total">
                            <t t-set="extra_class" t-value="&quot;col-xs-12 col-sm-5 col-sm-push-7&quot;"/>
                            <t t-set="redirect">/shop/payment</t>
                        </t>
                    </div>
                    <div class="clearfix"/>
                    <div class="oe_structure"/>

                    <div id="payment_method" class="col-md-12 o_website_sale_rightfit" t-if="(form_acquirers or s2s_acquirers or tokens) and website_sale_order.amount_total">
                        <h3 class="mb24">Pagar con </h3>
                        <t t-call="payment.payment_tokens_list">
                            <t t-set="mode" t-value="'payment'"/>
                            <t t-set="submit_txt">Pagar ahora</t>
                            <t t-set="icon_class" t-value="'fa-lock'"/>
                            <t t-set="pms" t-value="tokens"/>
                            <t t-set="form_action" t-value="'/shop/payment/token'"/>
                            <t t-set="prepare_tx_url" t-value="'/shop/payment/transaction/'"/>
                            <t t-set="partner_id" t-value="partner"/>
                        </t>
                    </div>

                    <div t-if="not (form_acquirers or s2s_acquirers)">
                        <a class="btn-link" groups="base.group_system" t-attf-href="/web#return_label=Website&amp;action=#{payment_action_id}">
                            <i class="fa fa-arrow-right" aria-hidden="true"/> Añadir medios de pago
                        </a>
                    </div>
                    <div class="js_payment mb64 row" t-if="not website_sale_order.amount_total" id="payment_method">
                        <div class="col-sm-12">
                            <form target="_self" action="/shop/payment/validate" method="post" class="pull-right">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <a class="btn btn-primary a-submit">
                                    <span t-if="order.amount_total &gt; 0">Pagar Ahora <span class="fa fa-long-arrow-right"/></span>
                                    <span t-if="order.amount_total == 0">Confirmar Pedido <span class="fa fa-long-arrow-right"/></span>
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>

        <!-- we shouldn't be able to pay if there is no way to deliver -->
        <xpath expr="//div[@id='payment_method']" position="attributes">
                <attribute name="t-att-style">'display: none!important' if not deliveries and delivery_has_stockable else ''</attribute>
        </xpath>

    </template>

</odoo>
