<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="js_footer" inherit_id="portal.frontend_layout" name="Custom Footer">
        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 col-lg-3">
                            <h4>Jim Sports Dominicana</h4>
                            <ul class="list-unstyled" id="products">
                                <li><a href="/">Inicio</a></li>
                                <li><a href="/shop">Tienda</a></li>
                                <li><a href="/contacto">Contáctenos</a></li>
                                <li><a href="/condiciones-de-envio">Condiciones de envío</a></li>
                            </ul>
                        </div>

                        <div class="col-md-3  col-lg-3" id="info">
                            <h4>Contacto</h4>
                            <ul class="list-unstyled">
                                <li><a href="/contacto">Contáctanos</a></li>
                            </ul>
                            <ul class="list-unstyled">
                                <li t-ignore="true">
                                    <i class="fa fa-phone"/>
                                    <!--<span t-field="res_company.phone"/>-->
                                    <span>+1 800 902 7707</span>
                                </li>
                                <li t-ignore="true"><i class="fa fa-envelope"/>
                                    <span><a href="mailto:ventas@grupojimsports.com">ventas@grupojimsports.com</a></span>
                                </li>
                            </ul>
                        </div>

                        <div class="col-md-3 col-lg-3">
                            <ul class="list-unstyled">
                                <li><a href="/web/login">Entrar</a></li>
                                <li><a href="/web/signup">Registrarse</a></li>
                                <li><a href="/sitemap.xml">Sitemap</a></li>
                            </ul>
                        </div>

                        <div class="col-md-3 col-lg-3">
                            <h4><span t-field="res_company.name"/></h4>
                            <p>Av. 27 de Febrero #234</p>
                            <p>Edificio Yolanda, Local 104, 1er. nivel</p>
                            <p>El Vergel, Santo Domingo</p>
                            <p>República Dominicana</p>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="js_footer_copyright" inherit_id="website.layout_footer_copyright" name="Custom Footer Copyright">
        <xpath expr="//footer/div[hasclass('container','mt16','mb8')]" position="replace">
            <div class="container mt16 mb8">
                <div class="pull-right" t-ignore="true" t-if="not editable"></div>
                <div class="pull-left text-muted">Copyright &amp;copy; <span t-field="res_company.name" /></div>
            </div>
        </xpath>
    </template>

</odoo>
