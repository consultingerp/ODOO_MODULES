<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="categorization_template_and_product_form_view" model="ir.ui.view">
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="customer_prices_by_product" class="oe_stat_button" type="object" icon="fa-eur">
                        <field string="Customer Prices" name="customer_prices_count" widget="statinfo" />
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
