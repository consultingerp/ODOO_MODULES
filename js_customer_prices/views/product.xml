<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_only_form_view_prices" model="ir.ui.view">
            <field name="name">product.template.product.form.prices</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="%(js_customer_prices.action_customer_prices_tmpl)d" type="action" icon="fa-eur" class="oe_stat_button" context="{ 'default_product_tmpl_id': active_id, 'search_default_product_tmpl_id': active_id }">
                        <field string="Customer Prices" name="customer_prices_count" widget="statinfo" />
                    </button>
                </div>
            </field>
        </record>

        <record id="product_normal_form_view_prices" model="ir.ui.view">
            <field name="name">product.template.product.form.prices</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="%(js_customer_prices.action_customer_prices_variant)d" type="action" icon="fa-eur" class="oe_stat_button" context="{ 'default_product_id': active_id, 'search_default_product_id': active_id }">
                        <field string="Customer Prices" name="customer_prices_count" widget="statinfo" />
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
